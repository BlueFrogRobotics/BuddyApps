<!-- 
mood        : ENUM Choose between 2 (AFRAID for CLIFF / GRUMPY for OBSTACLE)
randombi    : STRING Choose between 2 (Afraid01 for CLIFF / Grumpy01 for OBSTACLE)
 -->
<?xml version="1.0" ?>
  <BehaviourAlgorithm xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Instructions>
      <!-- START REACTION SURPRISE -->
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>RANDOM_SURPRISED</Value>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>20.0</Value>
        </YesAngle>
        <YesSpeed>
          <Value>50</Value>
        </YesSpeed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0.25</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>WHAT</Value>
        </FacialEvent>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>BLINK_EYES</Value>
        </FacialEvent>
      </ABehaviourInstruction>

      <!-- STEP BACK AND LOOK -->
      <ABehaviourInstruction xsi:type="LookAtBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Position>
          <Value>BOTTOM</Value>
        </Position>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveBodyBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Distance>
          <Value>0.1</Value>
        </Distance>
        <Speed>
          <Value>100</Value>
        </Speed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveBodyBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Angle>
          <Value>180</Value>
        </Angle>
        <Speed>
          <Value>100</Value>
        </Speed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>yes</Value>
        </IsRequired>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>-20</Value>
        </YesAngle>
        <YesSpeed>
          <Value>50</Value>
        </YesSpeed>
      </ABehaviourInstruction>

      <!-- DEPEND OF CLIFF OR OBSTACLE -->
      <ABehaviourInstruction xsi:type="SetMoodBehaviourInstruction">
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Mood>
          <Value>AFRAID</Value>
          <Name>mood</Name>
        </Mood>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="RunScriptBehaviourInstruction">
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <FileName>
          <Value>Afraid01.xml</Value>
          <Name>randombi</Name>
        </FileName>
      </ABehaviourInstruction>

      <!-- RESET HEAD POSITION -->
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>0</Value>
        </YesAngle>
        <YesSpeed>
          <Value>50</Value>
        </YesSpeed>
        <NoAngle>
          <Value>0</Value>
        </NoAngle>
        <NoSpeed>
          <Value>50</Value>
        </NoSpeed>
         <Position>
          <Value>CENTER</Value>
        </Position>
      </ABehaviourInstruction>
    </Instructions>
  </BehaviourAlgorithm>
