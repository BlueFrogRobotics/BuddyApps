<!-- 
soundevent   : ENUM Choose between 2 (HAPPY -> RANDOM_LAUGH / GRUMPY -> SIGH)
faceevent    : ENUM Choose between 2 (HAPPY -> SMILE / GRUMPY -> DOUBTFUL)
sayevent     : STRING Choose between 2 (HAPPY -> "j’aime bien être dans tes bras" / GRUMPY -> "où m’emmènes-tu ?")
 -->
<?xml version="1.0" ?>
  <BehaviourAlgorithm xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Instructions>
      <!-- START REACTION SURPRISE -->
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>RANDOM_SURPRISED</Value>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>20.0</Value>
        </YesAngle>
        <YesSpeed>
          <Value>50</Value>
        </YesSpeed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0.25</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>SURPRISED</Value>
        </FacialEvent>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>BLINK_EYES</Value>
        </FacialEvent>
      </ABehaviourInstruction>

      <!-- DEPEND ON BUDDY'S MOOD HAPPY / GRUMPY -->
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>RANDOM_LAUGH</Value>
          <Name>soundevent</Name>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>SMILE</Value>
          <Name>faceevent</Name>
        </FacialEvent>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="SayBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <Utterance>
          <Value>J’aime bien être dans tes bras</Value>
          <Name>sayevent</Name>
        </Utterance>
      </ABehaviourInstruction>

    </Instructions>
  </BehaviourAlgorithm>
