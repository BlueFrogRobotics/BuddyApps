<?xml version="1.0" encoding="UTF-8"?>
<bml id="tutorial1" category="excited">
	<speech id="speech1">
		<text>Bonjour à tous et bienvenue pour cette démonstration des BML. Je vais vous montrer ce que je suis capable de faire.</text>
	</speech>
	<faceMoodShift id="faceMood1" mood="HAPPY"/>
	<synchronized>
		<speech id="speech2">
			<text>Voici toutes les émotions que je suis capable d'arborer.</text>
		</speech>
		<behavior id="behavior1" name="mood"/>
	</synchronized>
	<synchronized>
		<speech id="speech3">
			<text>Il est bien sûr possible de me déplacer.</text>
		</speech>
		<move id="move1" distance="1" speed="150"/>
	</synchronized>
	<move id="move2" distance="1" leftWheelSpeed="-100" rightWheelSpeed="150"/>
	<move id="move3" distance="0.5" leftWheelSpeed="100" rightWheelSpeed="-150"/>
	<synchronized>
		<speech id="speech4">
			<text>Bien évidemment, je suis capable de bouger ma tête, mais aussi mes yeux.</text>
		</speech>
		<headYes id="headYes1" position="40" speed="100"/>
		<gaze id="gaze1" direction="UP" start="2"/>
	</synchronized>
	<headYes id="headYes2" position="0" speed="100"/>
	<gaze id="gaze2" direction="CENTER"/>
	<light id="light1" target="ALL" intensity="100" color="#FF0000"/>
	<speech id="speech5">
		<text>Je peux changer la couleur de mes lumières indépendament de mon visage.</text>
	</speech>
	<faceMoodShift id="faceMood10" mood="NEUTRAL"/>
</bml>