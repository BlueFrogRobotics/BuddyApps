<?xml version="1.0" encoding="utf-8"?>
<BehaviourAlgorithmStorage xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Settings>
		<Category>Suspicious</Category>
    <Mood>NEUTRAL</Mood>
    <Commitment>NOT_ENGAGED</Commitment>
    <MovementPattern>COMPLETE_FREEDOM</MovementPattern>
  </Settings>
  <Algorithm>
    <Instructions>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>30</Value>
        </YesAngle>
        <YesSpeed>
          <Value>10</Value>
        </YesSpeed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <NoAngle>
          <Value>-20</Value>
        </NoAngle>
        <NoSpeed>
          <Value>20</Value>
        </NoSpeed>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="LookAtBehaviourInstruction">
        <Delay>
          <Value>0.5</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <Position>
          <Value>RIGHT</Value>
        </Position>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>1</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>SUSPICIOUS</Value>
        </FacialEvent>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>1</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <Sound>
          <Value>CURIOUS_01</Value>
        </Sound>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="LookAtBehaviourInstruction">
        <Delay>
          <Value>2</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <Position>
          <Value>CENTER</Value>
        </Position>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>2.5</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <NoAngle>
          <Value>00</Value>
        </NoAngle>
        <NoSpeed>
          <Value>80</Value>
        </NoSpeed>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>2.5</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>10</Value>
        </YesAngle>
        <YesSpeed>
          <Value>20</Value>
        </YesSpeed>
      </ABehaviourInstruction>
    </Instructions>
  </Algorithm>
</BehaviourAlgorithmStorage>
