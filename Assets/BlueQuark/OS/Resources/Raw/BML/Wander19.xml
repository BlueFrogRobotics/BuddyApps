<?xml version="1.0" ?>
  <BehaviourAlgorithm xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Instructions>
      <ABehaviourInstruction xsi:type="SetMoodBehaviourInstruction">
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Mood>
          <Value>SICK</Value>
        </Mood>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>SIGH</Value>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0.5</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>RELATIVE_EVENT</Value>
        </FacialEvent>
      </ABehaviourInstruction>
    </Instructions>
  </BehaviourAlgorithm>
