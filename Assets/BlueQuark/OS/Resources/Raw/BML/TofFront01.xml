<?xml version="1.0" ?>
  <BehaviourAlgorithm xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Instructions>
      <!-- START REACTION SURPRISE -->
      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>RANDOM_SURPRISED</Value>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="LookAtBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <Position>
          <Value>TOP</Value>
        </Position>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="MoveHeadBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <CustomMove>
          <Value>true</Value>
        </CustomMove>
        <YesAngle>
          <Value>30.0</Value>
        </YesAngle>
        <YesSpeed>
          <Value>50</Value>
        </YesSpeed>
        <Position>
          <Value>CENTER</Value>
        </Position>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>BLINK_EYES</Value>
        </FacialEvent>
      </ABehaviourInstruction>

      <ABehaviourInstruction xsi:type="PlaySoundBehaviourInstruction">
        <Delay>
          <Value>0</Value>
        </Delay>
        <IsBlocking>
          <Value>false</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <SoundSample>
          <Value>LAUGH_2</Value>
          <Name>soundevent</Name>
        </SoundSample>
      </ABehaviourInstruction>
      <ABehaviourInstruction xsi:type="PlayFacialEventBehaviourInstruction">
        <Delay>
          <Value>0.25</Value>
        </Delay>
        <IsBlocking>
          <Value>true</Value>
        </IsBlocking>
        <IsRequired>
          <Value>false</Value>
        </IsRequired>
        <FacialEvent>
          <Value>SMILE</Value>
          <Name>faceevent</Name>
        </FacialEvent>
      </ABehaviourInstruction>

    </Instructions>
  </BehaviourAlgorithm>
